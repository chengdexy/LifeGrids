
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddNewThing</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("AddNewThing", "Things", FormMethod.Post))
        {
            <input type="hidden" name="txtIdHidden" id="txtIdHidden" value="@ViewBag.ID.ToString()" />
            <input type="hidden" name="txtDateHidden" id="txtDateHidden" value="@ViewBag.Date.ToString()" />
            <textarea name="taContent" id="taContent"></textarea>
            <hr />
            <button type="submit">OK</button>
        }
    </div>
</body>
</html>
